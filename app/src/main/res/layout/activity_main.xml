                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="cos"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="tan"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numLayoutHorizontal_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/numLayoutHorizontal1"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="xⁿ"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="log"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="ln"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="("/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text=")"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numLayoutHorizontal1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/numLayoutHorizontal2"
            android:weightSum="4"
            android:orientation="horizontal">


            <TextView
                android:maxLines="1"
                android:id="@+id/hidden1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="√x"/>
            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="C"/>
            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="Del"/>
            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="%"/>
            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="÷"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/numLayoutHorizontal2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/numLayoutHorizontal1"
            app:layout_constraintBottom_toTopOf="@id/numLayoutHorizontal3"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:maxLines="1"
                android:id="@+id/hidden2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="X!"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:textSize="@dimen/button_text_size"
                android:text="7"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
