            android:orientation="horizontal">


            <TextView
                android:maxLines="1"
                android:id="@+id/hidden3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="1/x"/>
            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="4"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="5"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="6"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/numLayoutHorizontal4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/numLayoutHorizontal3"
            app:layout_constraintBottom_toTopOf="@id/numLayoutHorizontal5"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:maxLines="1"
                android:id="@+id/hidden4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/transWhite"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="π"/>


            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="1"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="2"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="3"/>

            <TextView
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:foreground="@drawable/ripple_background"
                android:textSize="@dimen/button_text_size"
                android:text="+"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/numLayoutHorizontal5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/numLayoutHorizontal4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="4"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/switchButton"
                android:layout_width="35dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:tint="@color/colorAccent"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/switch_icon"/>

            </FrameLayout>



            <TextView
                android:maxLines="1"
                android:id="@+id/hidden5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@android:color/white"
