        </LinearLayout>
        <LinearLayout
            android:id="@+id/numLayoutHorizontal3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/numLayoutHorizontal2"
